{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "eslint:recommended"],
  "rules": {
    "comma-spacing": "error",
    "complexity": ["error", 10],
    "eqeqeq": "error",
    "import/extensions": [0],
    "import/no-extraneous-dependencies": ["warn", {"devDependencies": true}],
    "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
    "no-duplicate-imports": "error",
    "no-implicit-globals": "error",
    "no-var": "error",
    "prefer-const": "error",
    "semi": ["error", "never"],
  }
}
